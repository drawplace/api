{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint"],
	"rules": {
		"@typescript-eslint/explicit-module-boundary-types": 0,
		"no-throw-literal": 2,
		"eqeqeq": [2, "always"]
	},
	"env": {
		"node": true
	}
}
